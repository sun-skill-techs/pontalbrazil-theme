{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="why_with_form" id="quote-form" style="background-image:url({{ section.settings.bg_image | image_url : width : 2000 }});">
  <div class="page-width  section-{{ section.id }}-padding"> 
  <div class="wc_mainwrap">
    <div class="why_choose_wrap">
    <div class="why_choose_inner">
       {% for block in section.blocks %}
          <div class="why_choose_item">
            <img src="{{ block.settings.subImageUpload | image_url : width : 200  }}">
            <div class="wc_text_wrap">
             <h4>{{ block.settings.subHeading }}</h4>
             <p>{{ block.settings.content }}</p>
            </div>
          </div>
        {% endfor %}
     </div>
    </div>
    <div class="form_section">
        <div class="form-section_wrap">
          <h2 class="form_title">{{ section.settings.form_heading }}</h2>
          <div class="contact service_form">
            {% if request.path contains 'en' %}
              <!-- Code to execute if the URL contains 'en' -->
               <div style="margin:0 auto;" class="pxFormGenerator" id="Tl85Pqtw8r0bHhe27S6wCg"></div>
            {% else %}
              <!-- Code to execute if the URL does not contain 'en' -->
               <div style="margin:0 auto;" class="pxFormGenerator" id="mQTWC5uQZhnEWWtTkASmig"></div>
            {% endif %}
         
           
        </div>
        </div>
    </div>
  </div>
  </div>
</div>

{% schema %}
  {
    "name": "Features with form",
    "settings": [
      {
        "id":"bg_image",
        "type":"image_picker",
        "label":"Background Image"
      },
      {
        "id":"form_heading",
        "type":"text",
        "label":"Form Heading"
      },
          {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks":[
      {
      "name":"Featuers",
      "type":"featuers",
      "settings":[
                    {
                "type": "image_picker",
                "id": "subImageUpload",
                "label": "Icon"
            },
            {
                "type": "text",
                "id": "subHeading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "content",
                "label": "Content"
            }
      ]
      }
    ],
    "presets":[
      {
      "name":"Features with form",
      "category":"custom"
      }
    ]
  }
{% endschema %}