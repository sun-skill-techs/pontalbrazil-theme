<link rel="stylesheet" href="{{ "sst-step-section.css" |  asset_url }}">
{%- style -%}
  .section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
  }
{%- endstyle -%}

<div class="how-it-works-section section-{{ section.id }}">
  <div class="container">
    <div class="row">
      <!-- Left Column -->
      <div class="col-md-6">
        <div class="row">
          <!-- Left Sub-column -->
          <div class="col-md-6">
            <div class="image-stack">
              <div class="large-image">
                {%- if section.settings.large_image != blank -%}
                  <img src="{{ section.settings.large_image | img_url: 'master' }}" alt="{{ section.settings.large_image.alt | escape }}" loading="lazy">
                {%- else -%}
                  <div class="placeholder-image large"></div>
                {%- endif -%}
              </div>
              <div class="medium-image">
                {%- if section.settings.medium_image != blank -%}
                  <img src="{{ section.settings.medium_image | img_url: 'master' }}" alt="{{ section.settings.medium_image.alt | escape }}" loading="lazy">
                {%- else -%}
                  <div class="placeholder-image medium"></div>
                {%- endif -%}
              </div>
            </div>
          </div>
          
          <!-- Right Sub-column -->
          <div class="col-md-6">
            <div class="content-stack">
              <div class="text-block" style="background-color: {{ section.settings.text_block_bg_color }};">
                <div class="text-block-content">
                  {%- if section.settings.text_block_number != blank -%}
                    <div class="block-number">{{ section.settings.text_block_number }}</div>
                  {%- endif -%}
                  <div class="block-wrapper">
                    {%- if section.settings.text_block_title != blank -%}
                    <div class="block-title">{{ section.settings.text_block_title }}</div>
                  {%- endif -%}
                  {%- if section.settings.text_block_subtitle != blank -%}
                    <div class="block-subtitle">{{ section.settings.text_block_subtitle }}</div>
                  {%- endif -%}
                  </div>
                </div>
              </div>
              <div class="bottom-image">
                {%- if section.settings.bottom_image != blank -%}
                  <img src="{{ section.settings.bottom_image | image_url: width: 200 }}" alt="{{ section.settings.bottom_image.alt | escape }}" loading="lazy">
                {%- else -%}
                  <div class="placeholder-image bottom"></div>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Column -->
      <div class="col-md-6">
        <div class="steps-content">
          {%- if section.settings.main_heading != blank -%}
            <h2 class="main-heading">{{ section.settings.main_heading }}</h2>
          {%- endif -%}
          
          <div class="steps-grid">
            <div class="row steps-grid-row">
              <div class="col-md-6">
                <div class="step-block">
                 <div class="setp-col">
                   <div class="step-icon" style="background-color: {{ section.settings.step1_icon_bg }};">
                    <span class="step-number">{{ section.settings.step1_number }}</span>
                  </div>
                  <h3 class="step-title">{{ section.settings.step1_title }}</h3>
                 </div>
                  <p class="step-description">{{ section.settings.step1_description }}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="step-block">
                 <div class="setp-col">
                   <div class="step-icon" style="background-color: {{ section.settings.step2_icon_bg }};">
                    <span class="step-number">{{ section.settings.step2_number }}</span>
                  </div>
                  <h3 class="step-title">{{ section.settings.step2_title }}</h3>
                 </div>
                  <p class="step-description">{{ section.settings.step2_description }}</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mx-auto">
                <div class="step-block">
                 <div class="setp-col">
                   <div class="step-icon" style="background-color: {{ section.settings.step3_icon_bg }};">
                    <span class="step-number">{{ section.settings.step3_number }}</span>
                  </div>
                  <h3 class="step-title">{{ section.settings.step3_title }}</h3>
                 </div>
                  <p class="step-description">{{ section.settings.step3_description }}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

