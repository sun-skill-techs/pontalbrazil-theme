<link rel="stylesheet" href="{{ "sst-featured-services.css" |  asset_url }}">
<section class="featured-services-section">
  <div class="container">
    <h2 class="section-title primary-heading text-center ">{{ section.settings.title }}</h2>
    
    <div class="row g-4 mb-5 px-4 px-md-0">
      {% for block in section.blocks %}
        <div class="col-md-4 col-6">
          <div class="service-card h-100">
            <div class="service-icon mb-3">
              {% if block.settings.service_image %}
                <img src="{{ block.settings.service_image | img_url: 'master' }}" 
                     alt="{{ block.settings.service_title }}" 
                     class="service-image">
              {% else %}
                <div class="service-placeholder ">
                  <i class="fas fa-image"></i>
                </div>
              {% endif %}
            </div>
            <h5 class="service-title  secondary-text">{{ block.settings.service_title }}</h5>
            <p class="service-description">{{ block.settings.service_description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    
    <div class="row">
    <div class="col-12">
        {% if section.settings.show_button %}
      <div class="text-center mt-0 mt-md-5">
        <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-cta btn-twist">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
</div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Featured Services",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Services"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start My Application Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "image_picker",
          "id": "service_image",
          "label": "Service Icon Image",
          "info": "Upload an image to use as the service icon. Recommended size: 80x80px"
        },
        {
          "type": "text",
          "id": "service_title",
          "label": "Service Title",
          "default": "Service Title"
        },
        {
          "type": "textarea",
          "id": "service_description",
          "label": "Service Description",
          "default": "Brief description of the service"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Featured Services",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "service_title": "Certified document translations",
            "service_description": ""
          }
        },
        {
          "type": "service",
          "settings": {
            "service_title": "Brazilian VISA Assistance",
            "service_description": ""
          }
        },
        {
          "type": "service",
          "settings": {
            "service_title": "Passport applications/ renewals",
            "service_description": ""
          }
        },
        {
          "type": "service",
          "settings": {
            "service_title": "Processos consulares (CPF, título, alistamento, etc.)",
            "service_description": ""
          }
        },
        {
          "type": "service",
          "settings": {
            "service_title": "Redação de cartas de declaração",
            "service_description": ""
          }
        },
        {
          "type": "service",
          "settings": {
            "service_title": "Serviços do DMV (Carteira de motorista, title, registrations)",
            "service_description": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}